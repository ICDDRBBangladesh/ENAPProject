<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_marginTop="0sp" xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="fill_parent"  android:layout_height="wrap_content" android:scrollbars="vertical">
        <RelativeLayout android:id="@+id/secTitle1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_list_row"
            android:clickable="true"
            android:focusable="true"
            android:paddingBottom="@dimen/padding_list_row"
            android:paddingLeft="10sp"
            android:paddingRight="?listPreferredItemPaddingRight"
            android:paddingTop="@dimen/padding_list_row" android:layout_rowWeight="4">
            <LinearLayout android:layout_marginLeft="0sp" android:layout_gravity="center_vertical"
                android:id="@+id/message_container12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:orientation="horizontal"
                android:paddingLeft="0dp"
                android:paddingRight="@dimen/padding_list_row">
                <TextView android:id="@+id/lblHeading" android:text="Feeding Practises During KMC"  android:layout_width="wrap_content" android:layout_height="match_parent" android:gravity="left" android:textSize="20sp" android:textColor="@color/theme_color"/>
            </LinearLayout>
            <LinearLayout android:layout_marginLeft="0sp" android:layout_alignParentRight="true"
                android:id="@+id/message_container13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:orientation="horizontal"
                android:paddingLeft="0dp"
                android:paddingRight="@dimen/padding_list_row">
                <Button android:id="@+id/btnAdd" android:enabled="true" android:layout_width="wrap_content" android:layout_height="40sp" android:layout_marginTop="5sp" android:layout_marginLeft="5sp" android:background="@drawable/button_style_blue"
                    android:textSize="20sp" android:text="+ new observation " android:textColor="#FFFFFF"/>

            </LinearLayout>
        </RelativeLayout>
    <View android:layout_height="1dip" android:layout_marginTop="20sp" android:layout_width="fill_parent" android:layout_marginBottom="0sp" android:background="#CCCCCC" />
<ScrollView android:layout_width="fill_parent" android:layout_height="fill_parent" android:overScrollMode="always" android:isScrollContainer="true" android:scrollbarAlwaysDrawVerticalTrack="true" android:scrollbarStyle="outsideInset" android:scrollbars="vertical">
    <LinearLayout android:layout_marginLeft="10sp" android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="vertical">
       <LinearLayout android:id="@+id/secListView" android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal">
             <ListView android:scrollbars="vertical"
                  android:id="@+id/lstData"
                  android:layout_width="match_parent"
                  android:layout_height="250sp"
                  android:divider="#000000"
                  android:dividerHeight="1px"
                  android:clickable="true">
              </ListView>
       </LinearLayout>
    </LinearLayout>
</ScrollView>
</LinearLayout>