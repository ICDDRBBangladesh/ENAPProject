<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="org.icddrb.enap.MainActivity"
    tools:showIn="@layout/app_bar_main">


        <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="vertical" android:paddingTop="20sp">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="0sp">
                <TextView
                    android:id="@+id/lblProjectTitle"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="5sp"
                    android:gravity="center|center_vertical"
                    android:text="QA/Supervisor"
                    android:textColor="#ff0000"
                    android:textSize="35sp" android:textStyle="bold"/>

                <Button
                    android:id="@+id/cmdRegistration"
                    style="@style/menuButtonStyle"
                    android:layout_width="fill_parent"
                    android:layout_marginBottom="5sp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="20sp"
                    android:background="@drawable/button_style_gray"
                    android:gravity="center|center_vertical"
                    android:text="Registration and Tracking"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/cmdPatientAssign"
                    style="@style/menuButtonStyle"
                    android:layout_width="fill_parent"
                    android:layout_marginBottom="5sp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="20sp"
                    android:background="@drawable/button_style_gray"
                    android:gravity="center|center_vertical"
                    android:text="Patient Assign"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/cmdLDObj"
                    style="@style/menuButtonStyle"
                    android:layout_width="fill_parent"
                    android:layout_marginBottom="5sp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="20sp"
                    android:background="@drawable/button_style_sky"
                    android:gravity="center|center_vertical"
                    android:text="Labour and Delivery Observation"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/cmdKMCObj"
                    style="@style/menuButtonStyle"
                    android:layout_width="fill_parent"
                    android:layout_marginBottom="5sp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="20sp"
                    android:background="@drawable/button_style_sky"
                    android:gravity="center|center_vertical"
                    android:text="KMC Observation"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />


                <Button
                    android:id="@+id/cmdMRecall"
                    style="@style/menuButtonStyle"
                    android:layout_width="fill_parent"
                    android:layout_marginBottom="5sp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="20sp"
                    android:background="@drawable/button_style_yellow1"
                    android:gravity="center|center_vertical"
                    android:text="Maternal Recall Survey"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />



                <Button
                    android:id="@+id/cmdLDDataExt"
                    style="@style/menuButtonStyle"
                    android:layout_width="fill_parent"
                    android:layout_marginBottom="5sp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="20sp"
                    android:background="@drawable/button_style_gray"
                    android:gravity="center|center_vertical"
                    android:text="Data Extraction"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/cmdSepsis"
                    style="@style/menuButtonStyle"
                    android:layout_width="fill_parent"
                    android:layout_marginBottom="5sp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="20sp"
                    android:background="@drawable/button_style_gray"
                    android:gravity="center|center_vertical"
                    android:text="Infection Management Verification"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/cmdACS"
                    style="@style/menuButtonStyle"
                    android:layout_width="fill_parent"
                    android:layout_marginBottom="5sp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="20sp"
                    android:background="@drawable/button_style_gray"
                    android:gravity="center|center_vertical"
                    android:text="ACS Verification"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/cmdFollowup"
                    style="@style/menuButtonStyle"
                    android:layout_width="fill_parent"
                    android:layout_marginBottom="5sp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="20sp"
                    android:background="@drawable/button_style_gray"
                    android:gravity="center|center_vertical"
                    android:text="Follow-up"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="0sp" android:layout_weight="2">
                <Button
                    android:id="@+id/cmdDataSync"
                    style="@style/menuButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="5sp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="20sp"
                    android:layout_marginTop="20sp"
                    android:background="@drawable/button_style_green"
                    android:gravity="center|center_vertical"
                    android:text="Data Sync"
                    android:textColor="#ffffff"
                    android:textSize="20sp" android:layout_weight="1" />

                <Button
                    android:id="@+id/cmdExit"
                    style="@style/menuButtonStyle"
                    android:layout_width="fill_parent"
                    android:layout_marginBottom="5sp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="20sp"
                    android:layout_marginTop="20sp"
                    android:background="@drawable/button_style_red"
                    android:gravity="center|center_vertical"
                    android:text="Exit"
                    android:textColor="#ffffff"
                    android:textSize="20sp" android:layout_weight="1"/>
            </LinearLayout>


        </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:gravity="center|bottom"
        android:orientation="horizontal">
        <TextView android:id="@+id/txtUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="20sp"
            android:text="User Name"
            android:textColor="@color/theme_color" />
    </LinearLayout>
</RelativeLayout>
