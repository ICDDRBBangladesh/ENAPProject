<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="fill_parent"  android:layout_height="wrap_content" android:scrollbars="vertical">
    <LinearLayout android:layout_width="fill_parent" android:layout_height="45sp" android:orientation="horizontal" android:background="@color/pageHeadingBack">
        <ImageButton android:id="@+id/cmdBack" android:background="@color/pageHeadingBack" android:src="@drawable/back" android:layout_width="50sp" android:layout_height="match_parent"/>
        <TextView android:id="@+id/lblHeading" android:text="Observation" android:paddingLeft="10sp" android:layout_width="wrap_content" android:layout_height="match_parent" android:gravity="center_vertical" android:textSize="20sp" android:textColor="@color/pageHeading"/>
        <TextView android:id="@+id/lblCountPatient" android:text="" android:textColor="#ffffff" android:paddingLeft="10sp" android:layout_width="wrap_content" android:layout_height="match_parent" android:gravity="center_vertical" android:textSize="20sp"/>
        <ImageButton android:id="@+id/cmdSearch" android:visibility="gone" android:background="@color/pageHeadingBack" android:layout_alignParentRight="true" android:src="@drawable/ic_search_white_24dp" android:layout_width="50sp" android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:orientation="horizontal"
            android:paddingLeft="72dp" android:layout_alignParentRight="true"
            android:paddingRight="@dimen/padding_list_row">
            <Button android:id="@+id/cmdObj" android:enabled="false" android:layout_width="80sp" android:layout_height="30sp" android:layout_marginTop="2sp" android:background="@drawable/button_style_red"
                android:textSize="20sp" android:text="OB" android:textColor="#FFFFFF" />
            <Button android:id="@+id/cmdRS" android:enabled="false" android:layout_width="80sp" android:layout_height="30sp" android:layout_marginTop="2sp" android:layout_marginLeft="5sp" android:background="@drawable/button_style_red"
                android:textSize="20sp" android:text="MRS" android:textColor="#FFFFFF"/>
            <Button android:id="@+id/cmdDE" android:enabled="false" android:layout_width="80sp" android:layout_height="30sp" android:layout_marginTop="2sp" android:layout_marginLeft="5sp" android:background="@drawable/button_style_red"
                android:textSize="20sp" android:text="DE" android:textColor="#FFFFFF"/>

        </LinearLayout>
    </LinearLayout>
    <View android:layout_height="1dip" android:layout_width="fill_parent" android:layout_marginBottom="0sp" android:background="#CCCCCC" />

    <RelativeLayout android:id="@+id/secTitle1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_list_row"
        android:clickable="true"
        android:focusable="true"
        android:paddingBottom="@dimen/padding_list_row"
        android:paddingLeft="?listPreferredItemPaddingLeft"
        android:paddingRight="?listPreferredItemPaddingRight"
        android:paddingTop="@dimen/padding_list_row" android:layout_rowWeight="4">
        <LinearLayout android:layout_marginLeft="0sp"
            android:id="@+id/message_container12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:orientation="horizontal"
            android:paddingLeft="0dp"
            android:paddingRight="@dimen/padding_list_row">
        <TextView android:id="@+id/lblTitle" android:text="Observation"  android:paddingLeft="0sp" android:layout_width="wrap_content" android:layout_height="match_parent" android:gravity="left" android:textSize="25sp" android:textColor="@color/theme_color"/>
        </LinearLayout>
        <LinearLayout android:layout_marginLeft="0sp" android:layout_alignParentRight="true"
            android:id="@+id/message_container13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:orientation="vertical"
            android:paddingLeft="0dp"
            android:paddingRight="@dimen/padding_list_row">
            <TextView android:id="@+id/lblOutcodeStatus" android:text=""  android:paddingLeft="0sp" android:layout_width="wrap_content" android:layout_height="match_parent" android:gravity="right" android:textSize="18sp"
                android:background="#FAAC58" android:textColor="#000000"/>

            <Button android:textSize="20sp"
                android:id="@+id/cmdPatientList" android:drawableRight="@drawable/patient32"
                android:layout_width="140sp"
                android:layout_height="40sp" android:background="@drawable/button_style_yellow"
                android:text="  Patient" />

        </LinearLayout>
    </RelativeLayout>

    <View android:layout_height="0dip" android:layout_width="fill_parent" android:layout_marginBottom="0sp" android:background="#6699CC" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_list_row"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical"
        android:paddingBottom="@dimen/padding_list_row"
        android:paddingLeft="?listPreferredItemPaddingLeft"
        android:paddingRight="?listPreferredItemPaddingRight"
        android:paddingTop="@dimen/padding_list_row" android:layout_rowWeight="4">
        <LinearLayout android:layout_marginLeft="0sp"
            android:id="@+id/message_container1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:orientation="vertical"
            android:paddingLeft="0dp"
            android:paddingRight="@dimen/padding_list_row">

            <TextView android:text="Study ID"
                android:layout_width="120sp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/from" android:textSize="@dimen/textsize_list_row"
                android:textStyle="normal" />
            <TextView
                android:id="@+id/txtStudyID"
                android:layout_width="120sp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/theme_color" android:textSize="@dimen/textsize_list_row"
                android:textStyle="bold" />
            <TextView android:text="Hospital ID"
                android:layout_width="120sp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/from" android:textSize="@dimen/textsize_list_row" android:layout_marginTop="10sp"
                android:textStyle="normal" />
            <TextView
                android:id="@+id/txtHospID"
                android:layout_width="120sp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/theme_color" android:textSize="@dimen/textsize_list_row"
                android:textStyle="bold" />

        </LinearLayout>
        <LinearLayout android:layout_marginLeft="10sp"
            android:id="@+id/message_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:orientation="vertical"
            android:paddingLeft="130dp"
            android:paddingRight="@dimen/padding_list_row">

            <TextView
                android:id="@+id/txtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1" android:textSize="20dp" android:textStyle="bold"
                android:textColor="@color/from"/>

            <TextView
                android:id="@+id/txtAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1" android:textSize="@dimen/textsize_list_row"
                android:textColor="@color/subject"/>

            <TextView android:layout_marginTop="5sp"
                android:id="@+id/txtAddress"
                android:layout_width="300sp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="2" android:textSize="@dimen/textsize_list_row"
                android:textColor="@color/message"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:orientation="vertical"
            android:paddingLeft="72dp" android:layout_alignParentRight="true"
            android:paddingRight="@dimen/padding_list_row">

            <TextView android:id="@+id/lblType" android:text="type" android:gravity="center"
                android:layout_width="80sp"
                android:layout_height="wrap_content" android:textSize="@dimen/textsize_list_row"
                android:textColor="@color/timestamp"/>
<!--
            <Button android:id="@+id/cmdObj" android:layout_width="80sp" android:layout_height="30sp" android:background="@drawable/button_style_red"
                android:textSize="20sp" android:text="OB" android:textColor="#FFFFFF" />
            <Button android:id="@+id/cmdRS" android:layout_width="80sp" android:layout_height="30sp" android:layout_marginTop="2sp" android:background="@drawable/button_style_red"
                android:textSize="20sp" android:text="MRS" android:textColor="#FFFFFF"/>
            <Button android:id="@+id/cmdDE" android:layout_width="80sp" android:layout_height="30sp" android:layout_marginTop="2sp" android:background="@drawable/button_style_red"
                android:textSize="20sp" android:text="DE" android:textColor="#FFFFFF"/>
-->

        </LinearLayout>
        <LinearLayout android:layout_marginLeft="0sp" android:layout_alignParentRight="true"
            android:id="@+id/message_container132"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:orientation="vertical"
            android:paddingLeft="0dp"
            android:paddingRight="@dimen/padding_list_row">
            <Button android:textSize="20sp"
                android:id="@+id/cmdPause"
                android:layout_width="140sp"
                android:layout_height="40sp" android:background="@drawable/button_style_line_green"
                android:text="Pause" />
            <Button android:textSize="20sp" android:layout_marginTop="10sp"
                android:id="@+id/cmdStop"
                android:layout_width="140sp"
                android:layout_height="40sp" android:background="@drawable/button_style_line_green"
                android:text="Stop" />
        </LinearLayout>
    </RelativeLayout>

    <View android:layout_height="0dip" android:layout_width="fill_parent" android:layout_marginBottom="5sp" android:background="#CCCCCC" />
    <TextView android:id="@+id/lblPauseMessage" android:visibility="gone" android:text="Continue Observation: Press Resume Button" android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:textSize="25sp"
        android:textColor="#FF0000"/>

    <LinearLayout android:id="@+id/secTab" android:paddingTop="10sp" android:layout_width="fill_parent" android:layout_height="fill_parent" android:orientation="vertical">
        <TabHost
            android:id="@android:id/tabhost"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <TabWidget
                    android:id="@android:id/tabs"
                    android:showDividers="middle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
                <FrameLayout
                    android:id="@android:id/tabcontent"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"/>
            </LinearLayout>
        </TabHost>
    </LinearLayout>
</LinearLayout>

