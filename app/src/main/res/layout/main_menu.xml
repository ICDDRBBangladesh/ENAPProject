<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#F3F3F3"
    android:orientation="vertical">

    <View
        android:layout_width="fill_parent"
        android:layout_height="4dip"
        android:layout_marginBottom="5sp"
        android:background="@color/pageHeadingBack" />

    <include
        layout="@layout/form_heading"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:isScrollContainer="true"
        android:overScrollMode="always"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbarStyle="outsideInset"
        android:scrollbars="vertical">
        <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="vertical" android:paddingTop="0sp">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="0sp">

            <Button
                android:id="@+id/cmdOutpatient"
                style="@style/menuButtonStyle"
                android:layout_width="fill_parent"
                android:layout_marginBottom="5sp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:background="@drawable/button_style_gray"
                android:gravity="center|center_vertical"
                android:text="Menu Button"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />



        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="0sp" android:layout_weight="2">
            <Button
                android:id="@+id/cmdDataSync"
                style="@style/menuButtonStyle"
                android:layout_width="match_parent"
                android:layout_marginBottom="5sp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="10sp"
                android:layout_marginTop="20sp"
                android:background="@drawable/button_style_sky"
                android:gravity="center|center_vertical"
                android:text="Data Sync"
                android:textColor="#ffffff"
                android:textSize="20sp" android:layout_weight="1" />

            <Button
                android:id="@+id/cmdExit"
                style="@style/menuButtonStyle"
                android:layout_width="fill_parent"
                android:layout_marginBottom="5sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="20sp"
                android:layout_marginTop="20sp"
                android:background="@drawable/button_style_yellow"
                android:gravity="center|center_vertical"
                android:text="Exit"
                android:textColor="#ffffff"
                android:textSize="20sp" android:layout_weight="1"/>
        </LinearLayout>
        </LinearLayout>
  </ScrollView>
</LinearLayout>
