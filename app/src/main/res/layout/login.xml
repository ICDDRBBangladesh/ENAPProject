<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="vertical" android:background="@color/theme_color">
    <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/form_heading" />



    <LinearLayout android:layout_marginLeft="50sp" android:layout_marginRight="50sp" android:layout_marginTop="20sp" android:layout_marginBottom="0sp" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_gravity="center"></LinearLayout>

    <LinearLayout android:layout_marginLeft="50sp" android:layout_marginRight="50sp" android:layout_marginTop="30sp" android:layout_marginBottom="20sp" android:layout_width="fill_parent"  android:layout_height="wrap_content" android:layout_gravity="center">
        <EditText android:id="@+id/userid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:inputType="text"
            android:paddingTop="8sp" android:paddingBottom="8sp" android:paddingLeft="20sp"
            android:singleLine="true" android:hint="User ID" android:background="#FFFFFF"/>

    </LinearLayout>

    <LinearLayout android:layout_marginLeft="50sp" android:layout_marginRight="50sp" android:layout_marginTop="0sp" android:layout_marginBottom="20sp" android:layout_width="fill_parent"  android:layout_height="wrap_content" android:layout_gravity="center">
        <EditText android:id="@+id/pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:inputType="textPassword"
            android:paddingTop="8sp" android:paddingBottom="8sp" android:paddingLeft="20sp"
            android:singleLine="true" android:hint="Password" android:background="#FFFFFF"
            android:password="true" android:text=""/>

    </LinearLayout>

    <LinearLayout android:layout_marginLeft="50sp" android:layout_marginRight="50sp"  android:orientation="horizontal" android:layout_marginTop="0sp" android:layout_marginBottom="20sp" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_gravity="center">
        <Button android:id="@+id/btnLogin"  android:background="@drawable/button_style_green_gray"
            android:layout_width="wrap_content" android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:layout_marginBottom="10sp"
            android:text="Login" android:textColor="#FFFFFF"/>
        <Button android:id="@+id/btnClose" android:layout_marginLeft="20sp" android:visibility="gone"
            android:background="@drawable/button_style_green" android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:layout_marginBottom="10sp"
            android:text="Close" android:textColor="#FFFFFF"/>


    </LinearLayout>
    <LinearLayout android:layout_width="fill_parent" android:layout_marginTop="10sp" android:layout_height="wrap_content" android:orientation="horizontal" android:background="@color/pageHeadingBack">
        <TextView
            android:id="@+id/lblSystemDate"
            android:layout_height="30sp"
            android:layout_width="fill_parent"
            android:gravity="center"
            android:text="09 Jul 2014"
            android:textColor="@color/pageHeading"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout android:layout_marginLeft="50sp" android:layout_marginRight="50sp" android:layout_marginTop="0sp" android:layout_marginBottom="20sp" android:layout_width="fill_parent"  android:layout_height="wrap_content" android:layout_gravity="center">
        <TextView
            android:id="@+id/UniqueUserId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:gravity="center_horizontal|center_vertical" android:textColor="@color/heading_font_color"/>

    </LinearLayout>

</LinearLayout>
